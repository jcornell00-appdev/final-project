<h1>
  User #<%= @user.id %> details
</h1>

<form action="/create_follow_request" method="post">
    <!-- Hidden input for authenticity token to protect from forgery -->
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
    
    <input type="text" id="sender_id" name="sender_id" value="<%=current_user.id%>">
    <input type="text" id="recipient_id" name="recipient_id" value="<%=@user.id%>">
    
    
    <button class="btn btn-default btn-block" >
                Follow
              </button>
</form>



<hr>

<dl>
  <dt>
    Username
  </dt>
  <dd>
    <%= @user.username %>
  </dd>

  <dt>
    first_name
  </dt>
  <dd>
    <%= @user.first_name %>
  </dd>

  <dt>
    last_name
  </dt>
  <dd>
    <%= @user.last_name %>
  </dd>



  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@user.created_at) %> ago
  </dd>


</dl>


<hr>

<a href="/users">
  Go back
</a>
