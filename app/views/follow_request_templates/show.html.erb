<h1>
  Follow request #<%= @follow_request.id %> details
</h1>

<a href="/follow_requests/<%= @follow_request.id %>/edit">
  Edit follow request
</a>

<hr>

<dl>
  <dt>
    Sender
  </dt>
  <dd>
    <%= @follow_request.sender_id %>
  </dd>

  <dt>
    Recipient
  </dt>
  <dd>
    <%= @follow_request.recipient_id %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@follow_request.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@follow_request.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_follow_request/<%= @follow_request.id %>">
  Delete follow request
</a>

<hr>

<a href="/follow_requests">
  Go back
</a>
