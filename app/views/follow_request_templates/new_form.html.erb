<!-- Validation failure messages -->
<% if @follow_request.present? %>
  <% if @follow_request.errors.any? %>
    <% @follow_request.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new follow request
</h1>

<hr>

<form action="/create_follow_request" method="post">
  <!-- Label and input for sender_id -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <input type="text" id="sender_id" name="sender_id" class="form-control" value="<%= @follow_request.try(:sender_id) %>">
  </div>

  <!-- Label and input for recipient_id -->
  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <input type="text" id="recipient_id" name="recipient_id" class="form-control" value="<%= @follow_request.try(:recipient_id) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create follow request
  </button>
</form>

<hr>

<a href="/follow_requests">
  Go back
</a>
