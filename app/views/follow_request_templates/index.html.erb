<h1>
  All follow requests
</h1>

<a href="/follow_requests/new">
  Add a new follow request
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Sender
    </th>

    <th>
      Recipient
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @follow_requests.each do |follow_request| %>
  <tr>
    <td>
      <%= follow_request.id %>
    </td>

    <td>
      <%= User.find(follow_request.sender_id).username %>
    </td>

    <td>
      <%= User.find(follow_request.recipient_id).username %>
    </td>

    <td>
      <%= time_ago_in_words(follow_request.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(follow_request.updated_at) %> ago
    </td>

    <td>
      <a href="/follow_requests/<%= follow_request.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
